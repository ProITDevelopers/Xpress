<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <solid
                android:color="@color/box_border_color" />
            <stroke
                android:width="1dp"
                android:color="@color/box_border_color" />



            <corners
                android:bottomLeftRadius="30dp"
                android:bottomRightRadius="30dp"
                android:radius="60dp"
                android:topLeftRadius="30dp"
                android:topRightRadius="30dp" />



            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />

            <size
                android:height="60dp"
                android:width="270dp" />


        </shape>
    </item>
    <item >
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/box_border_color"
                android:endColor="@color/box_border_color"
                android:angle="270" />

            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="1dp"
                android:color="@color/box_border_color" />
            <corners
                android:bottomLeftRadius="30dp"
                android:bottomRightRadius="30dp"
                android:radius="60dp"
                android:topLeftRadius="30dp"
                android:topRightRadius="30dp" />



            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />

            <size
                android:height="60dp"
                android:width="270dp" />
        </shape>
    </item>
</selector>
