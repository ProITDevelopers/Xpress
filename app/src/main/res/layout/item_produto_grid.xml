<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="12dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/imgProdGrid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/transparentBlack"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="10"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                >

                <TextView
                    android:id="@+id/titleProdGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:text="hdsjdsjhds"
                    />

                <TextView
                    android:id="@+id/priceProdGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/xpress_green"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:text="hwjhwj"
                    />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp">

                    <ImageView
                        android:id="@+id/btn_addCart"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@drawable/ic_baseline_add_shopping_cart_24"
                        app:tint="@color/xpress_green"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:layout_gravity="end"

                        />

                    <LinearLayout
                        android:id="@+id/linearAddRemove"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/ic_remove"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:src="@drawable/ic_baseline_remove_box_24"
                            app:tint="@color/xpress_green"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            />

                        <TextView
                            android:id="@+id/product_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif"
                            android:gravity="center_horizontal"
                            android:lineSpacingExtra="2sp"
                            android:text="@string/one"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:textColor="@color/xpress_green"

                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/ic_add"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:src="@drawable/ic_baseline_add_box_24"
                            app:tint="@color/xpress_green"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            />
                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>



        </LinearLayout>

    </RelativeLayout>

