<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:fitsSystemWindows="true"
            android:background="@color/white"
            app:contentScrim="@color/xpress_green"
            app:expandedTitleTextAppearance="@android:color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            >

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_collapseMode="parallax"
                android:layout_gravity="center_horizontal"
                >




                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/imgUserPhoto"
                    android:layout_width="250dp"
                    android:layout_height="320dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    app:riv_corner_radius="12dp"
                    android:paddingTop="25dp"
                    android:paddingBottom="15dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    />

                <TextView
                    android:id="@+id/txtUserNameInitial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:maxLength="2"
                    android:visibility="gone"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/xpress_purple"
                    android:textSize="150sp"
                    />

            </FrameLayout>



        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabEditPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/account_edit_outline_24dp"
        app:tint="@color/white"
        app:elevation="6dp"
        app:layout_anchor="@id/app_bar_layout"
        app:layout_anchorGravity="bottom|right|end"
        app:pressedTranslationZ="12dp"
        app:useCompatPadding="true" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:paddingBottom="8dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp"
            android:paddingBottom="15dp"
            >

            <TextView
                android:id="@+id/txtNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="@string/primeiro_nome_caps"
                android:textColor="@color/perfil_text_color"
                android:alpha="0.5"
                />

            <TextView
                android:id="@+id/txtNomeCompleto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="@color/perfil_text_color"
                />


            <TextView
                android:id="@+id/txtNome2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:textSize="20sp"
                android:text="@string/sobrenome_caps"
                android:textColor="@color/perfil_text_color"
                android:alpha="0.5"
                />

            <TextView
                android:id="@+id/txtSobrenome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="@color/perfil_text_color"
                />


            <TextView
                android:id="@+id/txtUserMail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:textSize="20sp"
                android:text="@string/hint_email_caps"
                android:textColor="@color/perfil_text_color"
                android:alpha="0.5"
                />

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="@color/perfil_text_color"
                />


            <TextView
                android:id="@+id/txtContactos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:textSize="20sp"
                android:text="@string/contactos_caps"
                android:textColor="@color/perfil_text_color"
                android:alpha="0.5"
                />

            <TextView
                android:id="@+id/txtTelefone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="@color/perfil_text_color"
                />

            <TextView
                android:id="@+id/txtTelefoneAlternativo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="@color/perfil_text_color"
                />



            <TextView
                android:id="@+id/txtUserGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:textSize="20sp"
                android:text="@string/genero_caps"
                android:textColor="@color/perfil_text_color"
                android:alpha="0.5"
                />

            <TextView
                android:id="@+id/txtSexo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="@color/perfil_text_color"
                />



            <TextView
                android:id="@+id/txtUserAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:textSize="20sp"
                android:text="@string/endereco_caps"
                android:textColor="@color/perfil_text_color"
                android:alpha="0.5"
                />

            <TextView
                android:id="@+id/txtEndereco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="@color/perfil_text_color"
                android:layout_marginBottom="25dp"
                />



            <Button
                android:id="@+id/btnEditPerfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_margin="25dp"
                android:text="@string/editar_perfil"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@drawable/button_background"
                android:textColor="@android:color/white"
                />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>