<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardElevation="8dp"
    app:cardCornerRadius="40dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout_AlterarPass"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearBtnFecharTelef"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="end"
                android:elevation="1dp">

                <ImageView
                    android:id="@+id/imgBtnFecharTelef"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:src="@drawable/ic_baseline_clear_24"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_marginEnd="12dp"
                    android:layout_marginRight="12dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img"
                    android:src="@drawable/xpress_logo"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:scaleType="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    />

            </LinearLayout>

        </FrameLayout>



        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/login_register_text_color"
                    android:text="@string/alterar_palavra_passe"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:text="@string/alterar_palavra_passe_confirmcode_text"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="@string/alterar_palavra_passe_codedenied_text"/>

                    <TextView
                        android:id="@+id/txtTenteOutraVez"
                        android:layout_width="match_parent"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:textColor="@color/login_register_text_color"
                        android:layout_height="wrap_content"
                        android:text="@string/txtTentarNovamente"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        />

                </LinearLayout>

                <TextView
                    android:id="@+id/txt_telefone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:textColor="@color/login_icon_text_color"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:lines="2"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/box_border"
                        android:id="@+id/blur_password">

                        <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
                            android:id="@+id/dialog_pinCodigoConfirmacao"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/hit_codigo_confirm"
                            android:inputType="number"
                            android:maxLength="6"
                            android:background="@android:color/transparent"
                            android:padding="15dp"
                            android:drawableStart="@drawable/ic_baseline_phonelink_lock_24"
                            android:drawableLeft="@drawable/ic_baseline_phonelink_lock_24"
                            android:drawableTint="@color/login_icon_text_color"
                            android:drawablePadding="15dp"
                            android:textColor="@color/login_icon_text_color"

                            />

                    </RelativeLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/box_border">

                        <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
                            android:id="@+id/dialog_editNovaPass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/hit_nova_senha"
                            android:inputType="textPassword"
                            android:background="@android:color/transparent"
                            android:padding="15dp"
                            android:drawableStart="@drawable/ic_baseline_lock_open_24"
                            android:drawableLeft="@drawable/ic_baseline_lock_open_24"
                            android:drawableTint="@color/login_icon_text_color"
                            android:drawablePadding="15dp"
                            android:textColor="@color/login_icon_text_color"
                            />

                    </RelativeLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/dialog_btn_continuar"
                        android:layout_width="match_parent"
                        android:text="@string/hit_btn_enviar_cod"
                        android:textColor="@color/white"
                        android:layout_marginLeft="35dp"
                        android:layout_marginRight="35dp"
                        android:background="@drawable/button_background"
                        android:layout_height="44dp"
                        />

                </LinearLayout>


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


    </LinearLayout>





</androidx.cardview.widget.CardView>