<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:paddingBottom="10dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center_vertical"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="27dp">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/store_placeholder"
                android:scaleType="fitXY"


                />

        </androidx.cardview.widget.CardView>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/cardView"
            android:layout_toEndOf="@id/cardView"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:lineSpacingExtra="2sp"
                android:text="Fossil FS4552 MACHINE Watch"
                android:textColor="@color/login_icon_text_color"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="2sp"
                android:text="₹3,500 x 2"
                android:textColor="@color/login_register_text_color"
                android:textSize="14sp"
                android:textStyle="normal" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="2sp"
                    android:text="Taxa entrega:"
                    android:textColor="@color/login_icon_text_color"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/taxa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="2sp"
                    android:text="₹3,500"
                    android:textColor="@color/login_register_text_color"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    />

            </LinearLayout>



            <TextView
                android:id="@+id/estabelecimento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="2sp"
                android:text="estabelecimento"
                android:textColor="@color/login_icon_text_color"
                android:textSize="14sp"
                android:textStyle="normal" />





        </LinearLayout>

        <View
            android:layout_marginTop="10dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_below="@+id/cardView"
            android:layout_toRightOf="@id/cardView"
            android:layout_toEndOf="@id/cardView"
            android:background="@color/login_register_text_color"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>




    </RelativeLayout>





</androidx.cardview.widget.CardView>