<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RegisterActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <FrameLayout
            android:background="@drawable/register_green_bkg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:background="@drawable/register_border">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_marginTop="60dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:paddingBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">



                    <LinearLayout
                        android:weightSum="2"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginTop="25dp"
                        android:paddingTop="5dp"
                        android:id="@+id/hint_nome"

                        android:baselineAligned="false">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/hint_nome1">


                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/editPrimeiroNome"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/primeiro_nome"
                                android:maxLength="20"
                                android:maxLines="1"
                                android:inputType="textCapSentences|textPersonName"
                                />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/hint_nome2">


                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/editUltimoNome"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/sobrenome"
                                android:maxLength="20"
                                android:maxLines="1"
                                android:inputType="textCapSentences|textPersonName"
                                />
                        </com.google.android.material.textfield.TextInputLayout>



                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        app:layout_constraintTop_toBottomOf="@+id/hint_nome"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:paddingTop="5dp"
                        android:id="@+id/hint_nome_user">


                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/editNomeUtilizador"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/nome_de_usuario"
                            android:maxLines="1"
                            android:inputType="textPersonName"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/hint_nome_user"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:paddingTop="5dp"
                        android:id="@+id/hint_telefone_sexo"
                        >

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/hint_telefone1">

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/editTelefone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/numero_telefone"
                                android:maxLength="9"
                                android:inputType="phone"
                                />
                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        app:layout_constraintTop_toBottomOf="@+id/hint_telefone_sexo"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:paddingTop="5dp"
                        android:id="@+id/hint_email">


                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/editEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/hint_email"
                            android:maxLines="1"
                            android:inputType="textEmailAddress"
                            />
                    </com.google.android.material.textfield.TextInputLayout>




                    <com.google.android.material.textfield.TextInputLayout
                        app:layout_constraintTop_toBottomOf="@+id/hint_email"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:paddingTop="5dp"
                        android:id="@+id/hint_pass">

                        <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
                            android:id="@+id/editPass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/hint_password"
                            android:maxLines="1"
                            android:inputType="textPassword"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        app:layout_constraintTop_toBottomOf="@+id/hint_pass"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:paddingTop="5dp"
                        android:id="@+id/hint_confirm_pass">

                        <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
                            android:id="@+id/editConfirmPass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/confirmar_palavra_passe"
                            android:maxLines="1"
                            android:inputType="textPassword"
                            />
                    </com.google.android.material.textfield.TextInputLayout>



                    <LinearLayout
                        android:weightSum="2"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/hint_confirm_pass"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:paddingTop="5dp"
                        android:id="@+id/hint_municipio_bairro"
                        >




                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/hint_municipio">


                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/editMunicipio"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/municipio"
                                android:maxLength="20"
                                android:maxLines="1"
                                android:inputType="textCapSentences|textPersonName"
                                />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/hint_bairro">


                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/editBairro"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/bairro"
                                android:maxLength="25"
                                android:maxLines="1"
                                android:inputType="textCapSentences|textPersonName"
                                />
                        </com.google.android.material.textfield.TextInputLayout>



                    </LinearLayout>


                    <LinearLayout
                        android:weightSum="2"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/hint_municipio_bairro"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:paddingTop="5dp"
                        android:id="@+id/hint_rua_nCasa"
                        >



                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/hint_rua">


                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/editRua"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/rua"
                                android:maxLength="20"
                                android:maxLines="1"
                                android:inputType="textCapSentences|textPersonName"
                                />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/hint_nCasa">


                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/editNCasa"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/numero_da_casa"
                                android:maxLength="5"
                                android:maxLines="1"
                                android:inputType="text"
                                />
                        </com.google.android.material.textfield.TextInputLayout>



                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/hint_cidade_sexo"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/hint_rua_nCasa"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:paddingTop="5dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:background="@drawable/box_border"
                            android:gravity="center"
                            >

                            <Spinner
                                android:id="@+id/editCidadeSpiner"
                                android:layout_width="match_parent"
                                app:backgroundTint="#1c966a"
                                android:popupBackground="#0f4f38"
                                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                                android:layout_height="40dp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/box_border"
                            >

                            <ImageView
                                android:src="@drawable/ic_baseline_supervisor_account_24"
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />

                            <RadioGroup
                                android:id="@+id/radioGroup"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginStart="10dp"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/radioBtnFem"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:checked="false"
                                    android:textColorHint="@color/login_icon_text_color"

                                    android:text="@string/gender_female"
                                    android:textSize="16sp"/>

                                <RadioButton
                                    android:id="@+id/radioBtnMasc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"

                                    android:checked="false"
                                    android:textColorHint="@color/login_icon_text_color"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginStart="8dp"
                                    android:text="@string/gender_male"
                                    android:textSize="16sp"/>
                            </RadioGroup>



                        </LinearLayout>



                    </LinearLayout>

                    <Button
                        android:id="@+id/btnRegistro"
                        app:layout_constraintTop_toBottomOf="@+id/hint_cidade_sexo"
                        app:layout_constraintStart_toStartOf="@+id/hint_cidade_sexo"
                        app:layout_constraintEnd_toEndOf="@+id/hint_cidade_sexo"
                        android:text="@string/btn_registar_text"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:background="@drawable/button_background"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="30dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:id="@+id/txtCancelar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cancelar"
                        android:textColor="@color/login_icon_text_color"
                        android:padding="4dp"
                        android:textSize="14sp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:layout_marginTop="12dp"
                        app:layout_constraintTop_toBottomOf="@+id/btnRegistro"
                        app:layout_constraintStart_toStartOf="@+id/btnRegistro"
                        app:layout_constraintEnd_toEndOf="@+id/btnRegistro"
                        android:gravity="center"
                        />



                </androidx.constraintlayout.widget.ConstraintLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginTop="90dp"
                    android:src="@drawable/circle_photo_bkg"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_centerHorizontal="true"
                    android:elevation="1dp"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgUserPhoto"
                    android:layout_marginTop="90dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/foto_de_usuario"
                    app:civ_border_color="@color/userphoto_nav_bar_border"
                    app:civ_border_width="5dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:elevation="1dp"
                    />


            </RelativeLayout>




        </FrameLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>