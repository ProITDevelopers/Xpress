<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="8dp"
                    android:layout_margin="8dp"
                    >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        >


                        <TextView
                            android:id="@+id/txtDataPedido"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="16/12/2019"
                            android:textColor="@color/login_icon_text_color"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            />

                        <TextView
                            android:id="@+id/textViewState"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estado:"
                            android:textStyle="bold"
                            android:textColor="@color/xpress_purple"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                        <TextView
                            android:id="@+id/txtEstado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="P F"
                            android:layout_marginStart="8dp"
                            android:layout_marginLeft="8dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            app:layout_constraintStart_toEndOf="@+id/textViewState"
                            app:layout_constraintTop_toTopOf="parent"
                            />


                        <TextView
                            android:id="@+id/textViewPaymentState"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estado de pagamento:"
                            android:textColor="@color/xpress_purple"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textViewState" />


                        <TextView
                            android:id="@+id/txtEstadoPagamento"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginLeft="8dp"
                            android:text="P Pendente"
                            android:paddingStart="3dp"
                            android:paddingEnd="3dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            app:layout_constraintStart_toEndOf="@+id/textViewPaymentState"
                            app:layout_constraintTop_toBottomOf="@+id/textViewState"
                            />


                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Método de pagamento:"
                            android:textColor="@color/xpress_purple"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textViewPaymentState" />

                        <TextView
                            android:id="@+id/txtMetododPagamento"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginLeft="8dp"
                            android:text="Multicaixa"
                            android:textColor="@color/login_register_text_color"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            app:layout_constraintStart_toEndOf="@+id/textView3"
                            app:layout_constraintTop_toBottomOf="@+id/textViewPaymentState"
                            />

                        <ImageView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_monetization_on_24"
                            android:layout_marginStart="6dp"
                            android:layout_marginLeft="6dp"
                            app:tint="@color/xpress_purple"
                            app:layout_constraintStart_toEndOf="@+id/txtMetododPagamento"
                            app:layout_constraintTop_toBottomOf="@+id/textViewPaymentState"
                            />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Referência:"
                            android:textColor="@color/xpress_purple"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView3"
                            android:visibility="gone"
                            />

                        <TextView
                            android:id="@+id/txtRefereciaCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="898346893"
                            android:textColor="@color/login_register_text_color"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            app:layout_constraintStart_toEndOf="@+id/textView4"
                            app:layout_constraintTop_toBottomOf="@+id/textView3"
                            android:visibility="gone"
                            />


                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Entidade:"
                            android:textColor="@color/xpress_purple"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView4"
                            android:visibility="gone"
                            />

                        <TextView
                            android:id="@+id/txtEntidadeCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="898346893"
                            android:textColor="@color/login_register_text_color"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            app:layout_constraintStart_toEndOf="@+id/textView5"
                            app:layout_constraintTop_toBottomOf="@+id/textView4"
                            android:visibility="gone"
                            />

                        <View
                            android:id="@+id/view_separator"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView5"
                            android:background="@color/btn_gray_border"
                            android:layout_marginTop="15dp"

                            />


                        <TextView
                            android:id="@+id/textViewTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="Total"
                            android:textStyle="bold"
                            android:textColor="#262628"
                            android:textSize="27sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/view_separator" />

                        <TextView
                            android:id="@+id/txtTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="252367kz"
                            android:textColor="@color/login_register_text_color"
                            android:textStyle="bold"
                            android:textSize="27sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/view_separator"
                            />




                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="8dp"
                    android:layout_margin="8dp"
                    android:layout_marginTop="20dp"
                    >

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewOrderItems"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        />

                </androidx.cardview.widget.CardView>



            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include layout="@layout/activity_sem_internet"/>



</RelativeLayout>