<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="5dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="8dp"
    android:id="@+id/cardViewFactura"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_weight="1.80"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TextView
                    android:id="@+id/txtFacturaId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Encomenda #423"
                    android:textStyle="bold"
                    android:textColor="#242134"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:layout_weight="1.20"
                    />

                <TextView
                    android:id="@+id/txtTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="252367kz"
                    android:textColor="@color/login_register_text_color"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:layout_weight="0.80"
                    android:gravity="end|right"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TextView
                    android:id="@+id/txtEstado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="estado encomenda"
                    android:padding="5dp"
                    android:textSize="14sp"
                    android:layout_weight="1.20"
                    />

                <TextView
                    android:id="@+id/txtDataPedido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16/12/2019"
                    android:padding="5dp"
                    android:textSize="14sp"
                    android:layout_weight="0.80"
                    android:gravity="end|right"
                    android:textColor="#1a1824"
                    />



            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/imgNext"
            android:layout_weight="0.20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:padding="5dp"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            />

    </LinearLayout>



</androidx.cardview.widget.CardView>
